@model HRM_System.Models.SignInModel

@{
    ViewBag.Title = "Sign In | HRM System";
}


@*<h2 class="styled-heading">Hire character. Train skill</h2>*@

<h1>SmartHRM Login</h1>
<div class="clear-loading spinner">
    <span></span>
</div>
<div class="w3ls-login box box--big">
    <!-- Form to handle user sign-in -->
    @using (Html.BeginForm("SignIn", "Home", FormMethod.Post, new { id = "signInForm" }))
    {
        @Html.AntiForgeryToken()

        <!-- Summary of validation errors -->
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="agile-field-txt">
            <label><i class="fa fa-user" aria-hidden="true"></i> Username </label>
            <!-- Input field for username with validation -->
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Enter User Name" })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>

        <div class="agile-field-txt">
            <label><i class="fa fa-unlock-alt" aria-hidden="true"></i> Password </label>
            <!-- Input field for password with validation -->
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Enter Password", id = "myInput" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })


            @*<div class="agile-right">
                <a href="#">forgot password?</a>
            </div>*@
        </div>

        <input type="submit" value="LOGIN" class="btn btn-success">
    }
</div>

