@model IEnumerable<HRM_System.Models.Employee>

@{
    ViewBag.Title = "Employee List";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-lg-5 mt-4 mb p-3 bg-light rounded shadow-sm">
                <h2 class="mb-0 text-primary"><i class="fas fa-users"></i> Employee List</h2>
                <a class="btn btn-success btn-lg" href="/Employee/CreateEmployee">
                    <i class="fas fa-plus"></i> Create New Employee
                </a>
            </div>

            <!-- Alert Section -->
            @*<div class="alert alert-success alert-dismissible fade show" role="alert">
                Sample message!
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>*@

            <!-- Filter Section -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">🔍 Filter Employees</h5>
                    <span class="badge bg-light text-dark">Total Employees: @Model.Count()</span>
                </div>

                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">🔍 Search by Name</label>
                            <input class="form-control" placeholder="Type a name..." />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">🏢 Department</label>
                            <select class="form-control">
                                <option value="">All Departments</option>
                                <!-- Add departments dynamically here -->
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">👔 Employee Type</label>
                            <select class="form-control">
                                <option value="">All Employee Types</option>
                                <!-- Add employee types dynamically here -->
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">📄 Items per Page</label>
                            <select class="form-control"></select>
                        </div>
                        <div class="col-md-1 d-flex align-items-end">
                            <button type="submit" class="btn btn-success w-100">Filter 🎯</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Employee Table -->
            <div class="card shadow-sm">
                <div class="card-body p-0 table-responsive">
                    <table id="employeeTable" class="table table-hover table-striped mb-0">
                        <thead class="bg-primary text-white">
                            <tr>
                                <th>📛 Name</th>
                                <th>📧 Email</th>
                                <th>💼 Position</th>
                                <th>🏢 Department</th>
                                <th>⚧ Gender</th>
                                <th>👔 Employee Type</th>
                                <th class="text-center">⚙️ Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model)
                            {
                                <tr>
                                    <td>@employee.FullName</td>
                                    <td>@employee.Email</td>
                                    <td>@employee.Position</td>
                                    <td>@employee.Department</td>
                                    <td>@employee.Gender</td>
                                    <td>@employee.EmployeeType</td>
                                    <td class="text-center">
                                        <a class="btn btn-sm text-info" href="@Url.Action("Details", new { id = employee.EmpId })">
                                            <i class="fas fa-eye"></i> <!-- Updated to FontAwesome -->
                                        </a>
                                        <a class="btn btn-sm text-primary" href="@Url.Action("Edit", new { id = employee.EmpId })">
                                            <i class="fas fa-edit"></i> <!-- Updated to FontAwesome -->
                                        </a>
                                        <a class="btn btn-sm text-danger" href="@Url.Action("Delete", new { id = employee.EmpId })">
                                            <i class="fas fa-trash-alt"></i> <!-- Updated to FontAwesome -->
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pagination -->
            <nav aria-label="Employee List Pagination" class="mt-4">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item">
                        <a class="page-link" href="#" id="first">First ⏮️</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" id="previous">Previous ⬅️</a>
                    </li>
                    <li class="page-item active">
                        <span class="page-link" id="current-page">1</span>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" id="next">Next ➡️</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" id="last">Last ⏭️</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        var rowsPerPage = 6;  // Rows per page
        var rows = $('#employeeTable tbody tr');  // All rows in the table
        var totalRows = rows.length;  // Total number of rows
        var totalPages = Math.ceil(totalRows / rowsPerPage);  // Total number of pages
        var currentPage = 1;

        // Function to show a specific page
        function showPage(page) {
            var start = (page - 1) * rowsPerPage;
            var end = start + rowsPerPage;

            rows.hide();  // Hide all rows
            rows.slice(start, end).show();  // Show only rows for the current page

            $('.pagination .page-item').removeClass('active');
            $('#current-page').text(page);  // Update current page number
            $('.pagination .page-item').eq(page).addClass('active');  // Highlight active page
        }

        // Show the first page by default
        showPage(currentPage);

        // First button click event
        $('#first').click(function (e) {
            e.preventDefault();
            currentPage = 1;
            showPage(currentPage);
        });

        // Previous button click event
        $('#previous').click(function (e) {
            e.preventDefault();
            if (currentPage > 1) {
                currentPage--;
                showPage(currentPage);
            }
        });

        // Next button click event
        $('#next').click(function (e) {
            e.preventDefault();
            if (currentPage < totalPages) {
                currentPage++;
                showPage(currentPage);
            }
        });

        // Last button click event
        $('#last').click(function (e) {
            e.preventDefault();
            currentPage = totalPages;
            showPage(currentPage);
        });
    });
</script>
